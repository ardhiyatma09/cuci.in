<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:id="@+id/logo"/>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:textColor="@color/biruDesain"
            android:text="Cuci.in"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:id="@+id/title"/>
    <EditText
            android:layout_below="@id/title"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:textAlignment="center"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/email"/>
    <EditText
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email"
            android:hint="Password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:textAlignment="center"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/password"/>
    <Button
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="login"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/biruDesain"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"/>
    <TextView
            android:layout_marginTop="100dp"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:text="Belum punya akun? Silahkan Daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"/>
    <TextView
            android:textColor="@color/biruDesain"
            android:id="@+id/toRegister"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:text="Disini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>