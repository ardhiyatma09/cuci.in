<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ll_relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C4C4C4">

    <android.support.constraint.ConstraintLayout
            android:background="@drawable/backgroundbanner"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/ll_banner"
            android:layout_height="@dimen/identity_outlet">
        <ImageView
                android:src="@drawable/arrowleft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/btn_back" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.022" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:src="@drawable/labelputih"
                android:layout_width="80dp"
                android:layout_height="80dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_back" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp" app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/imageView2"/>
        <Button
                android:text="chat"
                android:textColor="@android:color/white"
                android:background="@drawable/border_chat"
                android:layout_width="60dp"
                android:layout_height="30dp" android:id="@+id/btn_chat"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.023" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="Cuciin Grogol"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.374"
                app:layout_constraintVertical_bias="0.05" android:id="@+id/tvNama"/>
        <TextView
                android:text="Fare / Km: 2000 (Pickup Delivery)"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.372"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="Operational Time: 09.00-20.00"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvAlamat" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.344"
                android:id="@+id/textView3"/>
        <TextView
                android:textAlignment="center"
                android:text="Jalan Grogol RT 1 RW 11 No. 17, Jakarta Barat"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvNama" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.632"
                android:layout_marginTop="36dp" android:id="@+id/tvAlamat"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/ll_content"
            android:orientation="vertical"
            android:layout_below="@+id/ll_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:text="Services"
                android:layout_below="@+id/ll_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View android:layout_width="match_parent"
              android:layout_height="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/biruDesain"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_pakaian"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <ImageView
                android:src="@drawable/pakaian"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="Cuci Pakaian + Setrika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="10.000/kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/btn_min"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            <EditText
                    android:id="@+id/idjumlah"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:background="@drawable/border_input_login"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:text="0"/>
            <ImageView
                    android:id="@+id/btn_plus"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_sepatu"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll_tas"
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <ImageView
                android:src="@drawable/pakaian"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="Cuci Sepatu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="25.000/pasang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/btn_minsepatu"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            <EditText
                    android:id="@+id/idjumlahsepatu"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:background="@drawable/border_input_login"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:text="0"/>
            <ImageView
                    android:id="@+id/btn_plussepatu"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_tas"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll_pakaian"
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <ImageView
                android:src="@drawable/pakaian"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="Cuci Tas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@android:color/black"
                    android:text="12.000/pcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/btn_mintas"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            <EditText
                    android:id="@+id/idjumlahtas"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:background="@drawable/border_input_login"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:text="0"/>
            <ImageView
                    android:id="@+id/btn_plustas"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
            android:id="@+id/id_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/biruDesain">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tvtextjumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Jumlah"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            <TextView
                    android:id="@+id/id_jumlah_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>