<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#E6E4E4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/bg"
            android:background="@drawable/backgroundbanner"
            android:layout_width="match_parent"
            android:layout_height="260dp"/>

    <RelativeLayout
            android:id="@+id/pro"
            android:background="@drawable/corner"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="450dp">
        <ImageView
                android:id="@+id/avatar"
                android:layout_marginTop="100dp"
                android:src="@drawable/avatar"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="70dp"/>


        <TextView
                android:layout_below="@+id/avatar"
                android:id="@+id/namaprofile"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#414040"
                android:text="Nama Profile"
                android:textAlignment="center"
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/alamat"
                android:layout_below="@+id/namaprofile"
                android:textSize="15dp"
                android:layout_margin="10sp"
                android:textColor="#414040"
                android:text="Alamat"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/kontak"
                android:layout_below="@+id/alamat"
                android:textSize="15dp"
                android:layout_margin="10sp"
                android:textColor="#414040"
                android:text="Kontak profile"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:layout_below="@+id/kontak"
                android:id="@+id/btn_logout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="LOgout"
                android:textSize="18dp"
                android:textColor="#fff"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>