<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#E6E4E4"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/bg"
            android:background="@drawable/backgroundbanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <RelativeLayout
            android:id="@+id/pro"
            android:background="@drawable/corner"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="410dp">

        <TextView
                android:id="@+id/ubah"
                android:textSize="15dp"
                android:textColor="#2196F3"
                android:text="Ubah"
                android:layout_marginTop="25dp"
                android:textAlignment="textEnd"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:id="@+id/avatar"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar"
                android:layout_height="100dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#008FF7"
        />

        <TextView
                android:id="@+id/nama"
                android:layout_below="@+id/avatar"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#414040"
                android:text=""
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/judulalamat"
                android:layout_below="@+id/avatar"
                android:layout_marginTop="60dp"
                android:textSize="15dp"
                android:textColor="#414040"
                android:text="Alamat"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/alamat"
                android:layout_below="@+id/judulalamat"
                android:textColor="#414040"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/judulkontak"
                android:layout_below="@+id/alamat"
                android:textSize="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#414040"
                android:text="Nomor Telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/kontak"
                android:layout_below="@+id/judulkontak"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#414040"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/judulemail"
                android:layout_below="@+id/kontak"
                android:textSize="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#414040"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/email"
                android:layout_below="@+id/judulemail"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#414040"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <Button
            android:layout_below="@+id/pro"
            android:id="@+id/btn_logout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LOgout"
            android:textSize="18dp"
            android:textColor="#fff"
            android:background="@drawable/corner2"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>