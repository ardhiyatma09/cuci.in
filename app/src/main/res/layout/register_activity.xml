<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/biruDesain"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_margin="10dp"
            android:id="@+id/arrowleft"
            android:src="@drawable/arrowleft"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    <TextView
            android:id="@+id/title"
            android:layout_below="@+id/arrowleft"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="Daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text"
            android:layout_below="@+id/title"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="Enter Your Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_below="@id/text"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:textAlignment="center"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/email"/>
    <EditText
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email"
            android:hint="Password"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:textAlignment="center"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/password"/>
    <Button
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="login"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/biruDesain"
            android:background="#FFFF"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"/>

</RelativeLayout>