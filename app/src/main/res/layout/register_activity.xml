<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/biruDesain"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_margin="10dp"
            android:id="@+id/back_img"
            android:src="@drawable/arrowleft"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    <TextView
            android:id="@+id/title"
            android:layout_below="@+id/back_img"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="Daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text"
            android:layout_below="@+id/title"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="Enter Your Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_below="@id/text"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Nama"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:paddingStart="15dp"
            android:inputType="text"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/nama"/>
    <EditText
            android:layout_below="@id/nama"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:hint="Alamat Lengkap"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:paddingStart="15dp"
            android:inputType="text"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/alamat"/>
    <EditText
            android:layout_below="@id/alamat"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:hint="Nomor Telepon"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:paddingStart="15dp"
            android:inputType="number"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/nomor_telepon"/>
    <EditText
            android:layout_below="@id/nomor_telepon"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:paddingStart="15dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/email"/>
    <EditText
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email"
            android:hint="Password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColorHint="@color/biruDesain"
            android:paddingStart="15dp"
            android:background="@drawable/border_input_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/password"/>
    <Button
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Daftar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/corner2"
            android:layout_width="match_parent"
            android:layout_marginStart="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_regis"/>

</RelativeLayout>